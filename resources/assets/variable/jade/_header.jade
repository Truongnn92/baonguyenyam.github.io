    .clearfix.mobile
      button.navbar-toggler.hidden-md-up.pull-sm-right.pull-xs-right(type='button', data-toggle='collapse', data-target='#BNGlobalMenu')
        i.mdi.mdi-menu
      ul.nav.navbar-nav.hidden-md-up
        li.nav-item
          a.navbar-brand(href='/')
            i.hvr-wobble-horizontal.app-icon.bn(bn-icon)
    #BNGlobalMenu.collapse.navbar-toggleable-sm
      a.navbar-brand.hidden-sm-down(href='/')
        i.hvr-wobble-horizontal.app-icon.bn(bn-icon)
      nav
        ul.nav.navbar-nav.navbar-right
          each val, key in menu
            if selected === key
              li.nav-item.active
                a.nav-link(href=val, title=key)= key
            else
              li.nav-item
                a.nav-link(href=val, title=key)= key

